<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <%#= image_tag 'avatar.png', class: 'img-fluid', alt: 'Sample image' %>
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
             class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="divider d-flex align-items-center my-4">
            <h3 class="text-center fw-bold mx-3 mb-0">Forgot your password?</h3>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.label :email, 'Email address', class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: 'Enter a valid email address' %>
          </div>

          <div class="text-center text-lg-start mt-2 pt-2 mb-2">
            <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-lg mb-2', style: 'padding-left: 2.5rem; padding-right: 2.5rem;' %>
          </div>

          <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary' %><br /></p>
          <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-success mb-2' %><br /></p>
        <% end %>
      </div>
    </div>
    <%#= render "devise/shared/links" %>
  </div>
</section>

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
    .h-custom {
        height: calc(100% - 73px);
    }
    @media (max-width: 450px) {
        .h-custom {
            height: 100%;
        }
    }
</style>
