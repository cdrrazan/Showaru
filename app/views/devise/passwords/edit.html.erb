<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
      <!-- Forgot Password -->
      <div class="card px-sm-6 px-0">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center mb-6">
            <%= link_to main_marketing_site_address, class: "app-brand-link gap-2" do %>
              <span class="app-brand-text demo text-heading fw-bold">Showaru ðŸš€</span>
            <% end %>
          </div>
          <!-- /Logo -->
          <h4 class="mb-1">Change your password</h4>
          <p class="mb-6">Enter your new password.</p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), id: "formAuthentication", class: 'mb-6', html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-password-toggle mb-6">
              <%= f.label :password, 'Password', class: 'form-label' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <div class="input-group input-group-merge">
                <%= f.password_field :password, class: 'form-control', id: "password", placeholder: 'Enter password' %>
                <span class="input-group-text cursor-pointer"><i class="icon-base bx bx-hide"></i></span>
              </div>
            </div>

            <div class="form-password-toggle mb-6">
              <%= f.label :password_confirmation, 'Password again', class: 'form-label' %><br />
              <div class="input-group input-group-merge">
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Enter password again" %>
                <span class="input-group-text cursor-pointer"><i class="icon-base bx bx-hide"></i></span>
              </div>
            </div>

            <div class="mb-6">
              <%= f.submit "Change my password", class: 'btn btn-primary d-grid w-100'%>
            </div>
          <% end %>

          <div class="text-center">
            <%= link_to new_session_path(resource_name), class: 'd-flex justify-content-center' do %>
              <i class="icon-base bx bx-chevron-left me-1"></i>
              Back to login
            <% end %>
          </div>

        </div>
      </div>
      <!-- / Forgot Password -->
    </div>
  </div>
</div>

<!-- / Content -->
