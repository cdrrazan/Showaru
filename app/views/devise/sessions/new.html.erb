<!-- Content -->

<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
      <!-- Register -->
      <div class="card px-sm-6 px-0">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center mb-6">
            <%= link_to main_marketing_site_address, class: "app-brand-link gap-2" do %>
              <span class="app-brand-text demo text-heading fw-bold">Showaru ðŸš€</span>
            <% end %>
          </div>
          <!-- /Logo -->

          <h4 class="mb-1">Welcome ðŸ‘‹</h4>
          <p class="mb-6">Please sign-in to your account.</p>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), id: "formAuthentication") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-6">
              <%= f.label :email, 'Email address', class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', id:  'email', placeholder: 'Enter a valid email address', autofocus: true %>
            </div>

            <div class="mb-6 form-password-toggle">
              <%= f.label :password, 'Password', class: 'form-label' %>
              <div class="input-group input-group-merge">
                <%= f.password_field :password, class: 'form-control', id: "password", placeholder: 'Enter password' %>
                <span class="input-group-text cursor-pointer"><i class="icon-base bx bx-hide"></i></span>
              </div>
            </div>

            <div class="mb-8">
              <div class="d-flex justify-content-between">
                <div class="form-check mb-0">
                  <%= f.check_box :remember_me, class: 'form-check-input me-2', id: 'remember-me' %>
                  <%= f.label :remember_me, 'Remember me', class: 'form-check-label' %>
                </div>
                <%= link_to new_password_path(resource_name) do %>
                  <span>Forgot Password?</span>
                <% end %>
              </div>
            </div>

            <div class="mb-6">
              <%= f.submit 'Login', class: 'btn btn-primary d-grid w-100' %>
            </div>
          <% end %>

          <p class="text-center">
            <span>New on our platform?</span>
              <%= link_to new_registration_path(resource_name) do %>
              <span>Create an account</span>
            <% end %>
          </p>
        </div>
      </div>
      <!-- /Register -->

    </div>
  </div>
</div>

<!-- / Content -->
