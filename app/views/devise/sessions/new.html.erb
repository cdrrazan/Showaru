<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-4">
        <div class="mb-2 w-25 image-center">
          <%= image_tag 'avatar.png', class: 'img-fluid', alt: 'Sample image' %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="divider d-flex align-items-center my-4">
            <h3 class="text-center fw-bold mx-3 mb-0">Sign In</h3>
          </div>

          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.label :email, 'Email address', class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: 'Enter a valid email address' %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.label :password, 'Password', class: 'form-label' %>
            <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: 'Enter password' %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <%= f.check_box :remember_me, class: 'form-check-input me-2' %>
              <%= f.label :remember_me, 'Remember me', class: 'form-check-label' %>
            </div>
          </div>

          <div class="text-center text-lg-start mt-2 pt-2 mb-2">
            <%= f.submit 'Login', class: 'btn btn-primary btn-lg mb-2 w-100', style: 'padding-left: 2.5rem; padding-right: 2.5rem;' %>
          </div>

          <p class="small fw-bold mt-2 pt-1 mb-1">Forgot your password <%= link_to "Reset here", new_password_path(resource_name) , class: 'btn btn-danger mb-2 w-25'  %>
          <p class="small fw-bold mt-2 pt-1 mb-1">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary w-25' %><br /></p>
        <% end %>
      </div>
    </div>
    <%#= render "devise/shared/links" %>
  </div>
</section>

<style>
    .image-center {
        margin: auto;
    }

    .img-fluid {
        border-radius: 50%;
    }

    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    @media (max-width: 450px) {
        .h-custom {
            height: 100%;
        }
    }
</style>


